{
  "name": "unicare-backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-ts": "tsc && npm run copy-js ",
    "copy-js": "copyfiles -u 1 src/**/**/*.js dist/",
    "postinstall": "npm install pg",
    "vercel-build": "npm run build",
    "lint": "tsc --noEmit && eslint \"src/**/**/*.{js,ts}\" --quiet --fix",
    "lint-dist": "eslint \"dist/**/**/*.js\" --quiet --fix",
    "format": "prettier --ignore-path .gitignore --write \"**/**/*.+(js|ts|json)\"",
    "serve": "nodemon dist/server.js",
    "start": "node dist/server.js",
    "dev": "npm run format && nodemon --watch \"src/**\" --ext \"ts,json\" --ignore \"src/**/*.spec.ts\" --exec \"tsnd --respawn src/server.ts\"",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\"  \"npm run watch-ts\" \"npm run watch-node\"",
    "db:generate": "npx drizzle-kit generate",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:clear": "tsx src/db/clear.ts",
    "db:seed": "tsx src/db/seeders/index.ts",
    "db:reset": "npm run db:clear && npm run db:generate && npm run db:migrate && npm run db:seed"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "description": "",
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/concurrently": "^6.4.0",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/errorhandler": "^1.5.3",
    "@types/eslint": "^9.6.1",
    "@types/eslint__js": "^8.42.3",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/express": "^5.0.0",
    "@types/joi": "^17.2.2",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.13.1",
    "@types/nodemailer": "^6.4.17",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.23.0",
    "@typescript-eslint/parser": "^8.23.0",
    "concurrently": "^9.1.2",
    "drizzle-kit": "^0.30.4",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "prettier": "^3.4.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.23.0"
  },
  "dependencies": {
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.7",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.39.2",
    "errorhandler": "^1.5.1",
    "express": "^4.21.2",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.10.0",
    "nodemon": "^3.1.9",
    "pg": "^8.13.3",
    "postgres": "^3.4.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ts-node": "^10.9.2",
    "uuid": "^11.0.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
